<section>
  <%= form_for @ticket  do |f| %>

    <div class="form-group">
      <label for="date">Date</label>
      <%= f.date_select(:date, class: 'form-control') %>
    </div>
    <div class="form-group">
      <label for="type">Type</label>
      <%= f.select :type, options_for_select(["Beverage", "Food", "Hotel booking", "Souvenirs", "Pictures", "Gifts", "Ticket"], @ticket.type), {:include_blank => "Select a Transaction type"}, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label for="price">Price</label>
      <%= f.text_field(:price, class: 'form-control') %>
    </div>
    <div class="form-group">
      <label for="visitor_id">Visitor ID</label>
      <%= f.text_field(:visitor_id, class: 'form-control') %>
    </div>
    <div class="form-group">
      <%= f.label :attraction_number %>
      <% for park in Park.all %>
        <div class="check_boxes">
          <%= check_box_tag "ticket[attraction_numbers][]", park.id, @ticket.parks.include?(park) %>
          <%= park.name %>
        </div>
      <% end %>
    </div>
  
    <div class="form-buttons">
      <%= submit_tag("Add", class: 'btn btn-primary') %>
      <%= link_to("Back to Transactions", { :action => 'index'}, :class => 'back-link btn btn-primary') %>
    </div>

  <% end %>
</section>
