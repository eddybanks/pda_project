<section>
  <%= form_for :visitors, { action: 'update', id: visitor.id }  do |f| %>

    <div class="form-group">
      <label for="id">ID</label>
      <%= f.text_field(:id, class: 'form-control') %>
    </div>
    <div class="form-group">
      <label for="name">Name</label>
      <%= f.text_field(:name, class: 'form-control') %>
    </div>
    <div class="form-group">
      <label for="gender">Gender</label>
      <%= f.select(:gender, ["male", "female", "other"], class: 'form-control') %>
    </div>
    <div class="form-group">
      <label for="birthday">Birthday</label>
      <%= f.date_select(:birthday, start_year: 1950, class: 'form-control') %>
    </div>
    <div class="form-buttons">
      <%= submit_tag("Add", class: 'btn btn-primary') %>
      <%= link_to("Back to Visitors", { :action => 'index'}, :class => 'back-link btn btn-primary') %>
    </div>

  <% end %>
</section>
