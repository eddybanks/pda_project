<% @header="Visitors" %>
<div class="panel-body">
  <div class="row">
    <div class="col-md-12">

    <%= form_tag url_for(:controller => :visitors, :action => :index) , method: :get do %>
          <%= text_field :search, params[:search], :placeholder => "Search for Visitors", :class => "form-control smaller-box", :id => "search_box" %>
          <%= submit_tag "Search", name: nil, :class => "btn btn-primary new-submit-btn", :id => "submit_btn" %>
      <% end %>
      <div class="clear"></div>
      
      <p><%= @count.nil? ? '' : "Search results: #{@count}" %></p>
      
      <h2><%= link_to 'Add New Tuple', new_visitor_path, class: "btn btn-primary" %></h2>
      <div id="visitorstable" class="table-responsive">

        <table class="table table-striped">

          <thead>
            <th><%= sortable "ID", "Visitor ID" %></th>
            <th><%= sortable "Name" %></th>
            <th><%= sortable "Gender" %></th>
            <th><%= sortable "Birthday" %></th>
            <th colspan='3'>Actions</th>
          </thead>

          <tbody>

            <% @visitors.each do |visitor| %>
            <tr>
              <td><%= visitor.id %></td>
              <td><%= visitor.name %></td>
              <td><%= visitor.gender %></td>
              <td><%= visitor.birthday.strftime("%m/%d/%Y") %></td>
              <td><p data-placement="top" data-toggle="tooltip" title="Show"><%= link_to raw('<span class="glyphicon glyphicon-open"></span>'), visitor_path(visitor), class: "btn btn-primary btn-xs" %></p></td>
              <td><p data-placement="top" data-toggle="tooltip" title="Edit"><%= link_to raw('<span class="glyphicon glyphicon-pencil"></span>'), edit_visitor_path(visitor), class: "btn btn-primary btn-xs" %></p></td>
              <td><p data-placement="top" data-toggle="tooltip" title="Delete"><%= link_to raw('<span class="glyphicon glyphicon-trash"></span>'), visitor_path(visitor), method: 'delete', data: { :confirm => "Are you sure you want to delete the entry for #{visitor.name} with ID = #{visitor.id}?" }, class: "btn btn-danger btn-xs" %></p></td>
            </tr>

            <% end %>

          </tbody>

        </table>

        <%= will_paginate @attractions %>

      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  if($('#search_box').val() ==  "") 
    $('#submit_btn').attr('disabled', true);

  $('#search_box').keyup(function(){
    if($('#search_box').val() !=  "") 
      $('#submit_btn').attr('disabled', false);    
    else
      $('#submit_btn').attr('disabled', true);   
  });
</script>
