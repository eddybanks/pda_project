<% @header="Transactions" %>
<div class="panel-body">
  <div class="row">
    <div class="col-md-12">
      <h2><a class="btn btn-primary" data-toggle="collapse" href="#transactionstable" aria-expanded="false" aria-controls="transactionstable">Transactions</a></h2>
      <div id="transactionstable" class="table-responsive collapse">

        <table class="table table-striped">

          <thead>

            <th><input type="checkbox" class="checkall" /></th>
            <th>Number</th>
            <th>Date</th>
            <th>Type</th>
            <th>Price</th>
            <th>Visitor ID</th>
            <th colspan='3'>Actions</th>
          </thead>

          <tbody>

            <% @transactions.each do |transaction| %>
            <tr>
              <td><input type="checkbox" class="checkthis" /></td>
              <td><%= transaction.number %></td>
              <td><%= transaction.name %></td>
              <td><%= transaction.type %></td>
              <td><%= transaction.price %></td>
              <td><%= transaction.visitor_id %></td>
              <td><p data-placement="top" data-toggle="tooltip" title="Show"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" ><span class="glyphicon glyphicon-pencil"></span></button></p></td>
              <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" ><span class="glyphicon glyphicon-pencil"></span></button></p></td>
              <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-trash"></span></button></p></td>
            </tr>

            <% end %>

          </tbody>

        </table>

        <div class="clearfix"></div>
        <ul class="pagination pull-right">
          <li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
          <li class="active"><a href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#">4</a></li>
          <li><a href="#">5</a></li>
          <li><a href="#"><span class="glyphicon glyphicon-chevron-right"></span></a></li>
        </ul>

      </div>
    </div>
  </div>
</div>
