        <h4 class="modal-title custom_align" id="Heading">Edit Group Detail</h4>
      </div>

      <div class="modal-body">
        <%= form_for :park, { :action => 'update', :id => @park.number }, :html => { :class => 'form-horizontal', :remote => true }  do |f| %>
