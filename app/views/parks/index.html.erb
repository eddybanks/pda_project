<% @header="Parks" %>
<div class="panel-body">
  <div class="row">
    <div class="col-md-12">
      <%= render 'layouts/search' %>
      <h2><%= link_to 'Add New Tuple', new_park_path, class: "btn btn-primary" %></h2>
      <div id="parktable" class="table-responsive">

        <table class="table table-striped" data-toggle="table" data-cache="false" data-height="299">

          <thead>

            <th><input type="checkbox" class="checkall" /></th>
            <th>Number</th>
            <th>Name</th>
            <th>Size</th>
            <th>Address</th>
          </thead>

          <tbody>

            <% @parks.each do |park| %>
            <tr>
              <td><input type="checkbox" class="checkthis" /></td>
              <td><%= park.id %></td>
              <td><%= park.name %></td>
              <td><%= park.size %></td>
              <td><%= park.address %></td>
              <td><p><%= link_to raw('<span class="glyphicon glyphicon-pencil"></span>'), edit_park_path(park), class: "btn btn-primary btn-xs" %></p></td>
              <td><p data-placement="top" data-toggle="tooltip" title="Edit"><%= link_to raw('<span class="glyphicon glyphicon-pencil"></span>'), edit_park_path(park), class: "btn btn-primary btn-xs" %></p></td>
              <td><p><%= link_to raw('<span class="glyphicon glyphicon-pencil"></span>'), edit_park_path(park), class: "btn btn-primary btn-xs" %></p></td>
              <!--td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#parks_edit#{park.id}" ><span class="glyphicon glyphicon-pencil"></span></button></p></td>
              <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#parks_delete" ><span class="glyphicon glyphicon-trash"></span></button></p></td-->
            </tr>

            <% end %>
          </tbody>

        </table>

        <%= will_paginate @attractions %>

      </div>
    </div>
  </div>
</div>
